{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "rootDir": "./",
    "moduleResolution": "nodenext",
    "paths": {
      "@/api/*": ["./src/api/*"],
      "@/config/*": ["./src/config/*"],
      "@/loaders/*": ["./src/loaders/*"],
      "@/middleware/*": ["./src/middleware/*"],
    },
    "declaration": false,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "index.ts"],
  "exclude": ["node_modules"]
}
